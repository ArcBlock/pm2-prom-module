{
    "name": "@arcblock/pm2-prom-module",
    "version": "2.6.9",
    "publishConfig": {
        "access": "public"
    },
    "description": "PM2 module to help collect applications statistic and send it to Prometheus server",
    "main": "index.js",
    "dependencies": {
        "@abtnode/util": "^1.16.44",
        "@keyv/sqlite": "^4.0.6",
        "@types/dockerode": "^3.3.42",
        "axios": "^1.13.2",
        "debug": "^4.4.3",
        "dockerode": "^4.0.7",
        "internal-ip": "^6.2.0",
        "is-url": "^1.2.4",
        "keyv": "^5.5.3",
        "lodash": "^4.17.21",
        "p-all": "^3.0.0",
        "pidusage": "^3.0.2",
        "pm2": "^6.0.8",
        "pmx": "beta",
        "prom-client": "^15.1.3",
        "semver": "^7.7.3",
        "ufo": "^1.6.1",
        "xbytes": "^1.9.1",
        "zx": "^8.8.0"
    },
    "scripts": {
        "predev": "export PM2_HOME=~/.arcblock/abtnode && pm2 delete @arcblock/pm2-prom-module && pm2 uninstall @arcblock/pm2-prom-module || true && npm run build",
        "dev": "export PM2_HOME=~/.arcblock/abtnode && pm2 install .",
        "predev:ec2-user": "export PM2_HOME=/home/ec2-user/.arcblock/abtnode && pm2 delete @arcblock/pm2-prom-module && pm2 uninstall @arcblock/pm2-prom-module || true && npm run build",
        "dev:ec2-user": "export PM2_HOME=/home/ec2-user/.arcblock/abtnode && pm2 install .",
        "predev:gcp": "export PM2_HOME=/home/arcblock/.arcblock/abtnode && pm2 delete @arcblock/pm2-prom-module && pm2 uninstall @arcblock/pm2-prom-module || true && npm run build",
        "dev:gcp": "export PM2_HOME=/home/arcblock/.arcblock/abtnode && pm2 install .",
        "build": "tsc -p tsconfig.json",
        "watch": "tsc -w -p tsconfig.json",
        "release": "npm run build && npm publish",
        "bump-version": "zx scripts/bump-version.mjs --quiet"
    },
    "files": [
        "README.md",
        "**/*.js"
    ],
    "apps": [
        {
            "merge_logs": true,
            "max_memory_restart": "1024M",
            "script": "index.js"
        }
    ],
    "config": {
        "port": "9988",
        "hostname": "0.0.0.0",
        "unix_socket_path": "",
        "service_name": "",
        "debug": false,
        "aggregate_app_metrics": true,
        "app_check_interval": 1000,
        "prefix": "pm2"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^18.19.50",
        "@types/pidusage": "^2.0.5",
        "bumpp": "^10.1.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=14"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/VeXell/pm2-prom-module.git"
    },
    "author": "Viacheslav Volkov (vexell@gmail.com)",
    "license": "MIT",
    "keywords": [
        "PM2",
        "Prometheus",
        "Metrics",
        "Monitoring",
        "Prom client",
        "Module",
        "Node.js",
        "Javascript"
    ]
}